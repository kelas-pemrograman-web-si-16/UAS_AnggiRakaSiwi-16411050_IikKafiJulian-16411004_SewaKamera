include  ../../users/dashboard
// Content Wrapper. Contains page content
.content-wrapper
    // Content Header (Page header)
    section.content-header
        h1
            | Data Pemesanan
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    |  Home
            li
                a(href='#') Tables
            li.active Data tables
    // Main content
    section.content
        .row
            .col-xs-12
                // /.box-body
                // /.box
                .box
                    .box-body
                        .box.box-info
                            .box-header.with-border
                                h3.box-title Edit data pesanan
                            // /.box-header
                            // form start
                            form.form-horizontal(method="POST", action='/'+penyewaans[0]._id + '/editpenyewaan', enctype="multipart/form-data")
                                .box-body
                                    .form-group
                                        label.col-sm-2.control-label(for='idpenyewaan') Id Penyewaan
                                        .col-sm-10
                                            input#idpenyewaan.form-control(type='text' required name="idpenyewaan"  placeholder='Id Penyewaan' value= (idpenyewaan == undefined) ? penyewaans[0].idpenyewaan: idpenyewaan)
                                    .form-group
                                        label.col-sm-2.control-label(for='idbarang') Id Barang
                                        .col-sm-10

                                            input#idbarang.form-control(type='text' required name="idbarang" disabled="disabled" placeholder='Id Barang' value= (idbarang == undefined) ? penyewaans[0].idbarang: idbarang )
                                    .form-group
                                        label.col-sm-2.control-label(for='merk') Merk
                                        .col-sm-10
                                            input#merk.form-control(type='text' name="merk" disabled="disabled" placeholder='Merk' value= (merk == undefined) ? penyewaans[0].data[0].merk: merk)
                                    .form-group
                                        label.col-sm-2.control-label(for='qty') Lama Penyewaan
                                        .col-sm-10
                                            input#qty.form-control(type='number' required name="qty" placeholder='Lama Penyewaan' value= (qty == undefined) ? penyewaans[0].qty: qty)
                                    .form-group
                                        label.col-sm-2.control-label(for='total') Total
                                        .col-sm-10
                                            input#total.form-control(type='number' required name="total" placeholder='Total' value= (total == undefined) ? penyewaans[0].total: total)

                                // /.box-body
                                .box-footer
                                    button.btn.btn-info.pull-right(type='submit') Input Data
