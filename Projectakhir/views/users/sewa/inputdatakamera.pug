include  ../../users/dashboard
// Content Wrapper. Contains page content
.content-wrapper
    // Content Header (Page header)
    section.content-header
        h1
            | Data Absen
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    |  Home
            li
                a(href='#') Tables
            li.active Data tables
    // Main content
    section.content
        .row
            .col-xs-12
                // /.box-body
                // /.box
                .box
                    .box-body
                        .box.box-info
                            .box-header.with-border
                                h3.box-title Input Data Absen
                            // /.box-header
                            // form start
                            form.form-horizontal(method="post", action="/inputkamera", role='form', enctype="multipart/form-data")
                                .box-body
                                    .form-group
                                        label.col-sm-2.control-label(for='idbarang') Id Barang
                                        .col-sm-10
                                            input#idbarang.form-control(type='text' required name="idbarang" placeholder='Id Barang')
                                    .form-group
                                        label.col-sm-2.control-label Select Jenis Barang
                                        .col-sm-10
                                            select.form-control(name="jenisbarang")
                                                option -Select Jenis Barang-
                                                option(value="Kamera") Kamera
                                                option(value="Lensa") Lensa
                                                option(value="Tripod") Tripod
                                                option(value="Flash") Flash
                                    .form-group
                                        label.col-sm-2.control-label(for='merk') Merk
                                        .col-sm-10
                                            input#merk.form-control(type='text' required name="merk" placeholder='Merk')
                                    .form-group
                                        label.col-sm-2.control-label(for='tipe') Tipe
                                        .col-sm-10
                                            input#tipe.form-control(type='text' required name="tipe" placeholder='Tipe')
                                    .form-group
                                        label.col-sm-2.control-label(for='harga') Harga
                                        .col-sm-10
                                            input#harga.form-control(type='text' required name="harga" placeholder='Harga')
                                    .form-group
                                        label.col-sm-2.control-label(for='foto') Foto
                                        .col-sm-10
                                            input#foto.form-control(type='file' required name="foto" placeholder='Foto')
                                // /.box-body
                                .box-footer
                                    button.btn.btn-info.pull-right(type='submit') Input Data
                                // /.box-footer

