include  ../../users/dashboard
// Content Wrapper. Contains page content
.content-wrapper
    // Content Header (Page header)
    section.content-header
        h1
            | Data Absen
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    |  Home
            li
                a(href='#') Tables
            li.active Data tables
    // Main content
    section.content
        .row
            .col-xs-12
                // /.box-body
                // /.box
                .box
                    .box-body
                        .box.box-info
                            .box-header.with-border
                                h3.box-title Input Data Absen
                            // /.box-header
                            // form start
                            form.form-horizontal(method="POST", action='/'+sewakameras._id + '/editkamera')
                                .box-body
                                    .form-group
                                        label.col-sm-2.control-label(for='idbarang') Id Barang
                                        .col-sm-10
                                            input#idbarang.form-control(type='text' required name="idbarang" placeholder='Id Barang' value= (idbarang == undefined) ? sewakameras.idbarang: idbarang)
                                    .form-group
                                        label.col-sm-2.control-label(for='jenisbarang') Jenis Barang
                                        .col-sm-10
                                            input#jenisbarang.form-control(type='text' name="jenisbarang" placeholder='Jenis Barang' value= (jenisbarang == undefined) ? sewakameras.jenisbarang: jenisbarang)
                                    .form-group
                                        label.col-sm-2.control-label(for='merk') Merk
                                        .col-sm-10
                                            input#merk.form-control(type='text' name="merk" placeholder='Merk' value= (merk == undefined) ? sewakameras.merk: merk)
                                    .form-group
                                        label.col-sm-2.control-label(for='tipe') Tipe
                                        .col-sm-10
                                            input#tipe.form-control(type='text' name="tipe" placeholder='Tipe' value= (tipe == undefined) ? sewakameras.tipe: tipe)
                                    .form-group
                                        label.col-sm-2.control-label(for='harga') Harga
                                        .col-sm-10
                                            input#harga.form-control(type='text' name="harga" placeholder='Harga' value= (harga == undefined) ? sewakameras.harga: harga)
                                    .form-group
                                        label.col-sm-2.control-label(for="foto") Foto
                                        .col-sm-2
                                            img(src='http://localhost:8000/uploads/' + sewakameras.foto, alt='', border='3', height='150', width='150')
                                            button#foto.form-control.btn.btn-info(type='button' data-toggle='modal' data-target='#modal-info') Ganti Foto
                                // /.box-body
                                .box-footer
                                    button.btn.btn-info.pull-right(type='submit') Input Data

                            form.form-horizontal(method="POST", action='/'+sewakameras._id + '/editgambarkamera', enctype="multipart/form-data")
                                                    #modal-info.modal.modal-info.fade
                                                        .modal-dialog
                                                            .modal-content
                                                                .modal-header
                                                                    button.close(type='button' data-dismiss='modal' aria-label='Close')
                                                                        span(aria-hidden='true') &times;
                                                                    h4.modal-title Ganti Foto ?
                                                                .modal-body
                                                                    img(src='http://localhost:8000/uploads/' + sewakameras.foto, alt='', border='3', height='150', width='150')
                                                                    input#poto.form-control(type='file' required name="foto" placeholder='Foto')
                                                                .modal-footer
                                                                    button.btn.btn-outline.pull-left(type='button' data-dismiss='modal') Close
                                                                    button.btn.btn-outline(type='submit') Save changes
