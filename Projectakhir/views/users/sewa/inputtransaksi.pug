include  ../../users/dashboard
// Content Wrapper. Contains page content
.content-wrapper
    // Content Header (Page header)
    section.content-header
        h1
            | Data Absen
        ol.breadcrumb
            li
                a(href='#')
                    i.fa.fa-dashboard
                    |  Home
            li
                a(href='#') Tables
            li.active Data tables
    // Main content
    section.content
        .row
            .col-xs-12
                // /.box-body
                // /.box
                .box
                    .box-body
                        .box.box-info
                            .box-header.with-border
                                h3.box-title Input Data Absen
                            // /.box-header
                            // form start
                            form.form-horizontal(method="post", action="/inputtransaksi", role='form', enctype="multipart/form-data")
                                .box-body
                                    .form-group
                                        img(src='http://localhost:8000/uploads/'+ sewakameras.foto, alt='', border='3', height='100', width='100')
                                    .form-group
                                        label.col-sm-2.control-label(for='idtransaksi') Id Transaksi
                                        .col-sm-10
                                            input#idtransaksi.form-control(type='text' required name="idtransaksi" placeholder='Id Transaksi')
                                    .form-group
                                        label.col-sm-2.control-label(for='jenisbarang') Jenis Barang
                                        .col-sm-10
                                            input#jenisbarang.form-control(type='text' required name="jenisbarang" placeholder='Jenis Barang' value= (jenisbarang == undefined) ? sewakameras.jenisbarang : jenisbarang)
                                    .form-group
                                        label.col-sm-2.control-label(for='jenisbarang') Harga
                                        .col-sm-10
                                            input#harga.form-control(type='number' name="harga" placeholder='Harga' value= (harga == undefined) ? sewakameras.harga : harga)
                                    .form-group
                                        label.col-sm-2.control-label(for='tanggalpinjam') Tanggal Pinjam
                                        .col-sm-10
                                            input#tanggalpinjam.form-control(type='date' required name="tanggalpinjam" placeholder='Tanggal Pinjam')
                                    .form-group
                                        label.col-sm-2.control-label(for='tanggalkembali') Tanggal Kembali
                                        .col-sm-10
                                            input#tanggalkembali.form-control(type='date' required name="tanggalkembali" placeholder='tanggalkembali')
                                // /.box-body
                                .box-footer
                                    button.btn.btn-info.pull-right(type='submit') Input Data
                                // /.box-footer

